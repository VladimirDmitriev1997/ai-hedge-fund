{
  // Make integrated terminals use our safe config dir & see ~/.local/bin
  "terminal.integrated.env.osx": {
    "XDG_CONFIG_HOME": "${env:HOME}/.xdg",
    "PATH": "${env:HOME}/.local/bin:${env:PATH}"
  },

  // Tell Python/VS Code which interpreter to use (your project venv)
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Let VS Code resolve "from hedge import ..." (src-layout)
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],

  // Jupyter runs locally with the selected interpreter/kernel
  "jupyter.jupyterServerType": "local",

  // Ruff lints as you type (and on save)
  "ruff.lint.run": "onSave",
  "ruff.organizeImports": true,

  // Black formats on save using the project interpreter
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // Enable pytest discovery under tests/
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"]
}
